<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_EXAMPLE_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state" type="status" label="COM_EXAMPLE_FILTER_STATE"
               description="COM_EXAMPLE_FILTER_STATE_DESC"
               onchange="this.form.submit();">
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>

    <fields name="list">
        <field name="fullordering" type="list" label="COM_EXAMPLE_LIST_FULL_ORDERING"
               description="COM_EXAMPLE_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();" default="a.id DESC">
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_EXAMPLE_ID_ASC</option>
            <option value="a.id DESC">COM_EXAMPLE_ID_DESC</option>
            <option value="a.state ASC">COM_EXAMPLE_STATE_ASC</option>
            <option value="a.state DESC">COM_EXAMPLE_STATE_DESC</option>
            <option value="a.ordering ASC">COM_EXAMPLE_ORDERING_ASC</option>
            <option value="a.ordering DESC">COM_EXAMPLE_ORDERING_DESC</option>
        </field>

        <field name="limit" type="limitbox" label="COM_EXAMPLE_LIST_LIMIT"
               description="COM_EXAMPLE_LIST_LIMIT_DESC" class="input-mini"
               default="25" onchange="this.form.submit();"/>
    </fields>
</form>